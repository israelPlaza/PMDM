<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView para mostrar la instrucción -->
        <TextView
            android:id="@+id/tv_instruccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca nombre:"
            android:textSize="18sp" />

        <!-- EditText para introducir el nombre -->
        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nombre"
            android:inputType="textPersonName" />

        <!-- Botón para capturar el nombre y mostrarlo en el TextView -->
        <Button
            android:id="@+id/btn_mostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Nombre" />

        <!-- TextView para mostrar el nombre introducido -->
        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El nombre es: "
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>